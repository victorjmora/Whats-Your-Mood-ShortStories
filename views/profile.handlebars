  <h2 class="center-align">Welcome, {{username}}!</h2>
  <h4 class="center-align">Write a New Story</h4>
  <div class="container">
    <div class="row">
      <div class="col s12 center-align">
        <h5>Give Your Story A Title:</h5>
        <form class="form new-story-form col s6">
          <div class="row">
            <div class="input-field col s6 offset-s3">
              <input placeholder="Story Title" id="story-title" type="text">
            </div>
          </div>
          <h5>Please Select a Genre:</h5>
          <div class="row">
            <div class="input-field col s6 offset-s3">
              <select id="form-select-1" class="browser-default">
                <option value="" disabled selected></option>
                <option value="Kids">Kids</option>
                <option value="Fantasy">Fantasy</option>
                <option value="Horror">Horror</option>
                <option value="Mystery">Mystery</option>
              </select>
            </div>
          </div>
          <h5>Write Your Story Here:</h5>
          <div class="row">
            <div class="input-field col s6 offset-s3">
              <textarea placeholder="Write Your Story Here" id="story-text" type="text" class="validate">
                </textarea>
              <button class="waves-effect waves-light btn green" type="submit">Create</a>
            </div>
          </div>
      </div>
    </div>

{{#if stories.length}}
  <div class="col s6 center-align story-list">
    <h3>Your Stories:</h3>
    {{#each stories as |story|}}
    <div class="row s12">
      <div class="col s6 offset-8">
        <h4><a href="/story/{{story.id}}">{{story.title}}</a></h4>
      </div>
      <div class="col s4 offset-2">
        <button class="btn btn-sm btn-danger" data-id="{{story.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
<script src="/star-rating/distribution/star-rating.js"></script>
